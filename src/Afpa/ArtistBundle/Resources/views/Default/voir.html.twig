{% extends '::base.html.twig' %}
{% block title %}
    {{ parent() }} - {{ artist.name }}
{% endblock %}

{% block content %}
    <div class="row header">
        <div class="col-md-8">
            <img src="{{ artist.images.2.url }}" alt="contact" class="avatar img-circle">
            <h3 class="name">{{ artist.name }}</h3>
            <span class="area">Artiste</span><br />
            {% for genre in artist.genres %}
                <a class="btn-flat gray">{{ genre }}</a>
            {% else %}
                <a class="btn-flat gray">Aucun genre</a>
            {% endfor %}
            <br />
            <a class="btn-flat success" href="{{ artist.external_urls.spotify }}">Voir sur Spotify.fr</a>
            <br />
            <a class="btn-flat white" href="{{ path('afpa_artist_save', { 'id': artist.id }) }}">Sauvegarder {{ artist.name }}</a>
        </div>
    </div>

    <!--Donuts -->
    <div class="row section ui-elements">   
        <div class="col-md-5 knobs">
            <div class="knob-wrapper">
                <input type="text" value="{{ artist.popularity|bonus }}" class="knob" data-thickness=".3" data-inputColor="#333" data-fgColor="#30a1ec" data-bgColor="#d4ecfd" data-width="150" data-readOnly="true">
                <div class="info">
                    <div class="param">
                        <span class="line blue"></span>
                        Popularit√©
                    </div>
                </div>
            </div>                       
        </div>
    </div>
{% endblock %}
